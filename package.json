{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hue",
  "title": "Hue",
  "description": "Quickly and easily control Philips Hue lights",
  "icon": "command-icon.png",
  "author": "pindab0ter",
  "license": "MIT",
  "commands": [
    {
      "name": "controlLights",
      "title": "Control Lights",
      "subtitle": "Hue",
      "description": "List, search and control lights",
      "mode": "view"
    },
    {
      "name": "controlGroups",
      "title": "Control Groups",
      "subtitle": "Hue",
      "keywords": ["room", "zone", "entertainment"],
      "description": "List, search and control rooms, zones and entertainment areas",
      "mode": "view"
    },
    {
      "name": "turnOffAllLights",
      "title": "Turn Off All Lights",
      "subtitle": "Hue",
      "description": "Turn off all the lights",
      "mode": "no-view"
    },
    {
      "name": "manageHueBridge",
      "title": "Manage Hue Bridge",
      "description": "Set up or remove your Hue Bridge.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.38.2",
    "@raycast/utils": "^1.0.7",
    "@types/node-localstorage": "^1.3.0",
    "@xstate/react": "^3.0.0",
    "node-hue-api": "^5.0.0-beta.13"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
